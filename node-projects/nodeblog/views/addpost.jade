extends layout

block content
  h1=title
  ul.errors
    if errors
      each error,i in errors
        li.alert.alert-danger #{error.msg}
  form(id="addpost", method="post", action="/posts/add",enctype="multipart/form-data")
    .form-group
      label Title:
      input.form-control(type="text", placeholder="Title",name="title")
    .form-group
      label Category:
      select.form-control(name="category")
        each category,i in categories
          option(value="#{category.title}") #{category.title}
    .form-group
      label Body:
      textarea.form-control(placeholder="Your post content..",name="body",id="body")
    .form-group
      label Main Image:
      input.form-control(type="file", name="mainimage",id="mainimage")
    .form-group
      label Author:
      select.form-control(name="author")
        option(value="Kevin Amiranoff") Kevin Amiranoff
        option(value="John Doe") Unknown
    input(type="submit",name="submit",value="Save")
    script(src="/ckeditor/ckeditor.js",)
    script
      | CKEDITOR.replace('body');
